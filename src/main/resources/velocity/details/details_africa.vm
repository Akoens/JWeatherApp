#parse("/velocity/layout.vm")
#@header()
#end
#@mainLayout()
<input type="hidden" name="stationID" id="stationID" value="$stationID"/>
<input type="hidden" name="continent" id="continent" value="$continent"/>
<input type="hidden" name="name" id="name" value="$name"/>
<div class="custom-container">
    <div class="row">
        <div class="col-xl-12 col-md-12">
            <div class="card shadow-sm animated fadeInUp">
                <div class="card-header bg-white">
                    <h4>Heat index temperature for $name station, $country</h4>
                </div>
                <div class="card-body p-5">
                    <div class="daily-chart">
                        <canvas id="dailyChart" height="300" style="width: 100%"></canvas>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row my-5">
         <div class="col-xl-6 col-md-12">
            <div class="card shadow-sm animated fadeInUp" style="height: 100%;" id="card">
                <div class="card-header bg-white">
                    <h4>Current conditions</h4>
                </div>
                <div class="card-body p-5 text-center">
                    <h1><span id="current-temp">$temp</span> Â°C</h1>
                </div>
            </div>
        </div>   
        <div class="col-xl-6 col-md-12">
            <div class="card shadow-sm animated fadeInUp" style="height: 100%;" id="card">
                <div class="card-header bg-white">
                    <h4>Recent data</h4>
                </div>
                <div class="card-body p-0 text-center">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Heat Index</th>
                            </tr>
                        </thead>
                        <tbody id="table-content">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>         
    </div>
</div>
#end
#@scripts()
<script src="/js/details_africa.js"></script>
#end